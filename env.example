# 君悦彩虹SPA技师展示网站 - 环境变量模板
# 复制此文件为 .env.local (开发环境) 或 .env.production (生产环境)

# ===========================================
# 基础配置
# ===========================================

# Node.js环境
NODE_ENV=development

# Next.js配置
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# ===========================================
# 数据存储配置
# ===========================================

# JSON数据文件路径
DATA_PATH=./data

# 上传文件路径
UPLOAD_PATH=./public/uploads

# JSON缓存配置
JSON_CACHE_ENABLED=true
JSON_BACKUP_ENABLED=true

# ===========================================
# 安全配置
# ===========================================

# 管理员密码（请修改为强密码）
ADMIN_PASSWORD=junyue123.123

# JWT密钥（请生成随机字符串）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 会话密钥（请生成随机字符串）
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===========================================
# 第三方服务配置
# ===========================================

# 百度地图API密钥
BAIDU_MAP_AK=qX0HXOj8pLLi0QdvvMpfScXdh6SllUqd

# ===========================================
# 域名和URL配置
# ===========================================

# 网站域名（生产环境请修改）
SITE_URL=http://localhost:3000
SITE_DOMAIN=localhost

# API基础URL
API_BASE_URL=http://localhost:3000/api

# ===========================================
# 文件上传配置
# ===========================================

# 最大文件大小（字节）
MAX_FILE_SIZE=20971520  # 20MB
MAX_IMAGE_SIZE=2097152  # 2MB
MAX_VIDEO_SIZE=10485760 # 10MB

# 允许的文件类型
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,webm,mov

# ===========================================
# 性能优化配置
# ===========================================

# 图片压缩质量 (1-100)
IMAGE_QUALITY=80

# 缩略图尺寸
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# 缓存时间（秒）
CACHE_TTL=3600  # 1小时

# ===========================================
# 监控和日志配置
# ===========================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 启用访问日志
ACCESS_LOG_ENABLED=true

# 启用错误报告
ERROR_REPORTING_ENABLED=true

# ===========================================
# 数据库备份配置（JSON文件）
# ===========================================

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# 自动备份间隔（小时）
AUTO_BACKUP_INTERVAL=24

# 备份路径
BACKUP_PATH=./backups

# ===========================================
# 邮件配置（可选）
# ===========================================

# SMTP服务器配置（如需邮件通知功能）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password
# FROM_EMAIL=noreply@junyuecaihong.com

# ===========================================
# Redis配置（可选，用于缓存）
# ===========================================

# Redis连接（如果使用Redis缓存）
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# ===========================================
# SSL/HTTPS配置
# ===========================================

# SSL证书路径（生产环境）
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 强制HTTPS重定向
# FORCE_HTTPS=true

# ===========================================
# 开发工具配置
# ===========================================

# 开发环境下显示详细错误
SHOW_DETAILED_ERRORS=true

# 启用热重载
HOT_RELOAD=true

# API调试模式
API_DEBUG=false 